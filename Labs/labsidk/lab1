public static String formatWord(String word) {
    String vowel = "";
    boolean vowelFound = false;

    for (int i = 0; i < word.length(); i++) {
        String letter = word.substring(i, i + 1);
        if (letter.equals("a") || letter.equals("e") || letter.equals("i")
                || letter.equals("o") || letter.equals("u")) {
            vowel = letter;
            break;
        }
    }

    String newWord = word;
    int count = 0;

    for (int i = 0; i < word.length(); i++) {
        String letter = word.substring(i, i + 1);

        if (letter.equals(vowel)) {
            count++;
        }

        if (count > 1 && letter.equals(vowel)) {
            newWord = newWord.substring(0, i) + "*" + newWord.substring(i + 1);
        }
    }

    return newWord;
}

String test101 = formatWord("eager");      // expecting "eag*r"
String test102 = formatWord("outcome");    // expecting "outc*me"
String test103 = formatWord("mississippi");// expecting "miss*ss*pp*"
String test104 = formatWord("chatbot");    // expecting "chatbot"
String test105 = formatWord("lymph");      // expecting "lymph"
String test106 = formatWord("luminous");   // expecting "lumino*s"
String test107 = formatWord("abacas");     // expecting "ab*c*s"
String test108 = formatWord("curious");    // expecting "curio*s"
String test109 = formatWord("curiosity");  // expecting "curiosity"
String test110 = formatWord("stagnation"); // expecting "stagn*tion"

public static int countWord(String sentence, String word) {
    int index = 0;
    int count = 0;
    int i = 0;

    while (index < sentence.length()) {
        i = sentence.indexOf(word, index);

        if (i >= 0) {
            if (i == 0 && sentence.substring(i + word.length(), i + word.length() + 1).equals(" ")) {
                count++;
            } else if (i == sentence.length() - word.length() && sentence.substring(i - 1, i).equals(" ")) {
                count++;
            } else if (sentence.substring(i - 1, i).equals(" ")
                    && sentence.substring(i + word.length(), i + word.length() + 1).equals(" ")) {
                count++;
            }

            index = i + word.length();
        } else {
            break;
        }
    }

    return count;
}

int test201 = countWord("java is fun and java is powerful", "java"); // expecting 2
int test202 = countWord("Test test TEST", "test");                   // expecting 1
int test203 = countWord("the best place in the galaxies is the home", "the"); // expecting 3
int test204 = countWord("the best place in these galaxies in the universe is the home", "the"); // expecting 3
int test205 = countWord("the best place in these galaxies in their universe is the home the", "the"); // expecting 3
int test206 = countWord("the best place in these galaxies is the home whether I am here or there", "the"); // expecting 2
int test207 = countWord("the best place in the galaxies is the home whether I am where or there", "the"); // expecting 3

public static String swapFirstLast(String sentence) {
    int firstIndex = -1;
    int lastIndex = -1;
    boolean spaceStart = false;
    boolean spaceEnd = false;

    // Handle leading and trailing spaces
    if (sentence.substring(sentence.length() - 1).equals(" ")
            && sentence.substring(0, 1).equals(" ")) {
        spaceStart = true;
        spaceEnd = true;
        sentence = sentence.substring(1, sentence.length() - 1);
    } else if (sentence.substring(0, 1).equals(" ")) {
        spaceStart = true;
        sentence = sentence.substring(1);
    } else if (sentence.substring(sentence.length() - 1).equals(" ")) {
        spaceEnd = true;
        sentence = sentence.substring(0, sentence.length() - 1);
    }

    System.out.println(sentence);

    firstIndex = sentence.indexOf(" ");
    if (firstIndex < 0) {
        return sentence;
    }

    lastIndex = sentence.indexOf(" ", firstIndex) + 1;
    while (lastIndex < sentence.length()) {
        if (sentence.indexOf(" ", lastIndex) > 0) {
            lastIndex = sentence.indexOf(" ", lastIndex);
        } else {
            break;
        }
        lastIndex++;
    }

    String returnStr =
            sentence.substring(lastIndex) + " " +
            sentence.substring(firstIndex + 1, lastIndex - 1) + " " +
            sentence.substring(0, firstIndex);

    if (spaceStart) {
        returnStr = " " + returnStr;
    }
    if (spaceEnd) {
        returnStr += " ";
    }

    return returnStr;
}
String test301 = swapFirstLast("coding is creative"); // expecting "creative is coding"
String test302 = swapFirstLast("hello"); // expecting "hello"
String test303 = swapFirstLast("able was i ere i saw elba"); // expecting "elba was i ere i saw able"
String test304 = swapFirstLast("there are places i remember"); // expecting "remember are places i there"
String test305 = swapFirstLast("there are places i remember "); // expecting "remember are places i there " <-- notice space at the end
String test306 = swapFirstLast(" there are places i remember");  // expecting " remember are places i there" <-- notice space at the beginning
String test307 = swapFirstLast(" there are places i remember "); // expecting " remember are places i there " <-- notice space at the beginning and end